
@model KutuphaneTakipSistemi.Models.Entity.TBLKITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="Form-group">
        <div style="margin-bottom:15px">
            <label>Kitap ID</label>

            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1,
                                     new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Yazar </label>
            @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2,
                                    new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Basım YIlı </label>
            @Html.TextBoxFor(y => y.BASIMYIL, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Yayınevi </label>
            @Html.TextBoxFor(y => y.YAYINEVI, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label>Sayfa Sayısı </label>
            @Html.TextBoxFor(y => y.SAYFA, new { @class = "form-control" })
        </div>

        <div style="margin-bottom:15px">
            <label> Durumu </label>
            @Html.TextBoxFor(y => y.DURUM, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
    </div>

}


